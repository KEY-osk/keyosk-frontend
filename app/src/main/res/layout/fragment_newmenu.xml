<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewMenu_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/kiosk_grey_02">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:id="@+id/mmth_ice_VanillaCrumbleIceCreamLatte"
                    android:layout_width="70dp"
                    android:layout_height="110dp"
                    android:background="@drawable/btn_invisible_black"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/mmth_ice_VanillaCrumbleIceCreamLatte_img"
                        android:layout_width="35dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_launcher_foreground"
                        android:padding="16dp" />

                    <TextView
                        android:id="@+id/mmth_ice_VanillaCrumbleIceCreamLatte_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:text="바닐라 크럼블\n아이스크림 라떼"
                        android:textColor="@color/kiosk_black_01"
                        android:textSize="7.5sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/mmth_ice_VanillaCrumbleIceCreamLatte_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1500"
                            android:textColor="@color/kiosk_black_01"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:textColor="@color/kiosk_black_01"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mmth_ice_JejuSmoothie"
                    android:layout_width="70dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_invisible_black"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/mmth_ice_JejuSmoothie_img"
                        android:layout_width="35dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_launcher_foreground"
                        android:padding="16dp" />

                    <TextView
                        android:id="@+id/mmth_ice_JejuSmoothie_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="제주 한라봉\n감귤 스무디"
                        android:textColor="@color/kiosk_black_01"
                        android:textSize="7sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/mmth_ice_JejuSmoothie_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3000"
                            android:textColor="@color/kiosk_black_01"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:textColor="@color/kiosk_black_01"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
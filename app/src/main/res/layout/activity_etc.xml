<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kiosk_grey_01">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_cafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kiosk_white"
        tools:ignore="InvalidId,MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/kiosk_white"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="30dp"
                android:text="기 타"
                android:textSize="35dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/kiosk_white">
        
                    <Button
                        android:id="@+id/cafe_category"
                        android:layout_width="58dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/btn_invisible"
                        android:padding="5dp"
                        android:text="@string/cafe"
                        android:textColor="@color/kiosk_black_01"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/fastfood_category"
                        app:layout_constraintHorizontal_bias="0.453"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
        
                    <Button
                        android:id="@+id/fastfood_category"
                        android:layout_width="58dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_invisible"
                        android:textColor="@color/kiosk_black_01"
                        android:padding="5dp"
                        android:text="패스트푸드"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.384" />
        
                    <Button
                        android:id="@+id/etc_category"
                        android:layout_width="58dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/btn_category_select"
                        android:textColor="@color/kiosk_white"
                        android:padding="5dp"
                        android:text="기타"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/fastfood_category"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="@color/kiosk_white">

            <ImageView
                android:id="@+id/rank1_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:src="@drawable/ice_cream_svgrepo_com"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/rank_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="80dp"
                android:text="무인 아이스크림 판매점"
                android:textColor="@color/kiosk_black_01"
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@+id/rank1_img"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/rank_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="40dp"
                android:text="기타"
                android:textColor="@color/kiosk_black_01"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/rank_title"
                app:layout_constraintTop_toTopOf="@+id/rank_title" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </com.google.android.material.appbar.AppBarLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="@color/kiosk_white">

    <ImageView
        android:id="@+id/rank1_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_launcher_foreground"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/rank_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="80dp"
        android:text="맥도날드"
        android:textColor="@color/kiosk_black_01"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/rank1_img"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/rank_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:text="프랜차이즈"
        android:textColor="@color/kiosk_black_01"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/rank_title"
        app:layout_constraintTop_toTopOf="@+id/rank_title"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>